{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["es6"],     
    "module": "commonjs",     
    "allowJs": true,    
    "outDir": "./dist",   
    "rootDir": "./src",   
    "removeComments": true,     
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],         
    "esModuleInterop": true, 
    "resolveJsonModule": true,                             
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,       
    "skipLibCheck": true,                                                                                                                                                         
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@config/*": ["./src/config/*"],
    }       
  }
}
